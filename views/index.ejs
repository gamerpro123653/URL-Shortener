<html>
    <head>
      <title>Hieuhs Recapcha</title>
      <link rel="stylesheet" href="../public/stylesheet/index.css" type="text/css">
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    </head>
    <body>
        <div class="center">
            <h1>Xác Minh</h1>
            <form action="" method="POST">
                <input type="hidden" class="input-token" name="input-token">
                <div class="g-recaptcha" data-callback="recaptcha_callback" data-expired-callback="recapcha_failed" data-sitekey="6Le2BFkjAAAAADCZbrKsL6OYIWIVBxfZMzC90oX5"></div>
                <br/>
                <input type="submit" value="Tiếp Tục Đi" name="continue" id="mc-embedded-subscribe" class="button" hidden disabled>
            </form>
        </div>

        <div class="fixed-bottom container-fluid p-0">
            <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
                © 2022 Copyright:
                <a class="text-white" href="https://github.com/autoshgame">Hieuhs</a>
            </div>

        </div>
    </body>
</html>

<script src='https://www.google.com/recaptcha/api.js'></script>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>    
<script type="text/javascript">
    function recaptcha_callback(response){
        $('.button').prop("disabled", false);
        $('.button').prop("hidden", false);
        $('.input-token').val(response);
    }

    function recapcha_failed() {
        $('.button').prop("disabled", true);
        $('.button').prop("hidden", true);
        $('.input-token').val("");
    }
</script>
